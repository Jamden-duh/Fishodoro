<script>
    // Javascript to handle functionality
    // Array to store tasks
    let tasks = [];
    let coins = 0;

    // Toggle visibility of the todo list popup
    function toggleTodoListPopup() {
        const popup = document.getElementById("todoListPopup");
        if (popup.style.display === "none" || popup.style.display === "") {
            popup.style.display = "block";
        } else {
            popup.style.display = "none";
        }
    }

    // Toggle visibility of the shop popup
    function toggleShopPopup() {
        const popup = document.getElementById("shopPopup");
        if (popup.style.display === "none" || popup.style.display === "") {
            popup.style.display = "block";
        } else {
            popup.style.display = "none";
        }
    }

    // Open the add task modal
    function openModal() {
        document.getElementById("taskModal").style.display = "block";
    }

    // Close the add task modal
    function closeModal() {
        document.getElementById("taskModal").style.display = "none";
    }

    // Function to fetch and display tasks from the backend
        function fetchTasks() {
        fetch("/Todo/GetTasks")
        .then(response => response.json())
        .then(tasks => {
            const list = document.getElementById("todoList");
            list.innerHTML = ""; // Clear existing list

            tasks.forEach((task, index) => {
                const li = document.createElement("li");
                li.className = "list-group-item";
                li.setAttribute("data-index", index);
                li.draggable = true; // Ensure tasks are draggable
                li.innerHTML = `
                    <input type="checkbox" class="delete-checkbox" onclick="toggleTaskRemoval(${index})">
                    <div class="task-content">
                        <div class="task-text">
                            <div class="task-name">${task.name}</div>
                            <div class="task-description">${task.description}</div>
                        </div>
                    </div>
                `;

                list.appendChild(li);
            });
        })
        .catch(error => console.error("Error fetching tasks:", error));
    }

    // Run fetchTasks() when the page loads
    window.onload = function () {
        fetchTasks();
    };

    // Add a new task
    function addTask() {
    const taskName = document.getElementById("taskInput").value.trim();
    const taskDescription = document.getElementById("taskDescription").value.trim();

    if (!taskName) {
        alert("Task name is required!");
        return;
    }

    const newTask = {
        Name: taskName,
        Description: taskDescription,
        IsCompleted: false
    };

    fetch("/Todo/AddTask", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(newTask)
    })
    .then(response => {
        if (!response.ok) {
            throw new Error("Failed to add task");
        }
        return response.json();
    })
    .then(data => {
        console.log("Task added:", data);
        closeModal();
        fetchTasks(); // Refresh the task list

        // Clear input fields
        document.getElementById("taskInput").value = "";
        document.getElementById("taskDescription").value = "";
    })
    .catch(error => console.error("Error adding task:", error));
}

            // Remove a task when checkbox is checked
        function toggleTaskRemoval(index) {
            fetch("/Todo/ToggleTaskRemoval", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(index) // Send the task index to the backend
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Failed to remove task");
                }
                return response.json();
            })
            .then(data => {
                console.log("Task removed:", data);
                fetchTasks(); // Refresh the task list

                // Add 10 coins when a task is completed
                coins += 10;
                updateCoinDisplay(); // Update coins display
            })
            .catch(error => console.error("Error removing task:", error));
        }


    // Buy an item from the shop
    function buyItem(price) {
        if (coins >= price) {
            coins -= price;
            updateCoinDisplay();
            alert(`You bought an item for ${price} coins!`);
        } else {
            alert("Not enough coins!");
        }
    }

    // Update the coin display
    function updateCoinDisplay() 
    {
        document.getElementById("coinCount").innerText = coins;
        localStorage.setItem("coins", coins); // Save coins to localStorage
    }

    // ===== NEW DRAG-AND-DROP CODE =====
    let draggedItem = null;
    
    document.addEventListener("dragstart", (e) => {
    if (e.target.classList.contains("list-group-item")) {
        draggedItem = e.target;
        e.target.style.opacity = "0.5";

        // ===== NEW CODE TO REMOVE GHOST IMAGE =====
        const dragImage = new Image();
        dragImage.src = "data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"; // Transparent 1x1 image
        e.dataTransfer.setDragImage(dragImage, 0, 0); // Set the drag image
        // ===== END OF NEW CODE =====
    }
    });
    
    document.addEventListener("dragend", (e) => {
        if (draggedItem) {
            draggedItem.style.opacity = "1";
            draggedItem = null;
        }
    });
    
    document.addEventListener("dragover", (e) => {
        e.preventDefault();
        const afterElement = getDragAfterElement(e.clientY);
        const list = document.getElementById("todoList");
        if (afterElement == null) {
            list.appendChild(draggedItem);
        } else {
            list.insertBefore(draggedItem, afterElement);
        }
    });
    
    function getDragAfterElement(y) {
        const draggableElements = [...document.querySelectorAll(".list-group-item:not(.dragging)")];
        return draggableElements.reduce((closest, child) => {
            const box = child.getBoundingClientRect();
            const offset = y - box.top - box.height / 2;
            if (offset < 0 && offset > closest.offset) {
                return { offset, element: child };
            } else {
                return closest;
            }
        }, { offset: Number.NEGATIVE_INFINITY }).element;
    }
    
    document.addEventListener("drop", async (e) => {
        const taskElements = document.querySelectorAll(".list-group-item");
        const newOrder = Array.from(taskElements).map((element, index) => ({
            Name: element.querySelector(".task-name").innerText,
            Description: element.querySelector(".task-description").innerText,
            IsCompleted: false
        }));
    
        await fetch("/Todo/ReorderTasks", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(newOrder)
        });
    
        fetchTasks(); // Refresh the task list
    });
    // ===== END OF NEW DRAG-AND-DROP CODE =====
    
    // Load saved coin data when the page loads
    window.onload = function () {
        const savedCoins = localStorage.getItem("coins");
        if (savedCoins !== null) {
            coins = parseInt(savedCoins, 10);
            updateCoinDisplay();
        }
    };

    // Initialize tasks on page load
    fetchTasks();

    // Close popups when clicking outside
    document.addEventListener("click", function (event) {
        const todoPopup = document.getElementById("todoListPopup");
        const shopPopup = document.getElementById("shopPopup");
        const todoButton = document.querySelector("button[onclick='toggleTodoListPopup()']");
        const shopButton = document.querySelector("button[onclick='toggleShopPopup()']");

        if (!todoPopup.contains(event.target) && !todoButton.contains(event.target)) {
            todoPopup.style.display = "none";
        }

        if (!shopPopup.contains(event.target) && !shopButton.contains(event.target)) {
            shopPopup.style.display = "none";
        }
    });

    // Function to update the coin display based on screen width
    function adjustCoinDisplay() {
        const coinDisplay = document.querySelector('.coin-display-fixed');
        const coinIcon = document.querySelector('.coin-icon');
        const coinCount = document.getElementById('coinCount');

        if (window.innerWidth <= 768) { // Check if the screen width is 768px or smaller
            // Adjust styles for small screens (e.g., mobile or tablet)
            coinDisplay.style.fontSize = '16px';
            coinIcon.style.width = '25px';
            coinIcon.style.height = '25px';
            coinCount.style.fontSize = '16px';
        } else {
            // Revert to original styles for larger screens
            coinDisplay.style.fontSize = '20px';
            coinIcon.style.width = '30px';
            coinIcon.style.height = '30px';
            coinCount.style.fontSize = '20px';
        }
    }

    // Call the function to apply the initial styles
    adjustCoinDisplay();

    // Listen for window resizing and adjust styles accordingly
    window.addEventListener('resize', adjustCoinDisplay);

    function addTestCoins(amount) {
    coins += amount;
    updateCoinDisplay();
    }
</script>


